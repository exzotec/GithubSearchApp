@page
@model GithubSearchApp.Pages.CardsModel
@{
    ViewData["Title"] = "Results";
}

<h1>GitHub Search Results</h1>

<form method="post">
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="SearchText" placeholder="Enter search text" required>
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (Model.Results != null)
{
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Results.Items)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">Author: @item.Owner.Login</p>
                            <p class="card-text">Stargazers: @item.Stargazers_count</p>
                            <p class="card-text">Watchers: @item.Watchers_count</p>
                            <a href="@item.Html_url" target="_blank" class="btn btn-primary">View on Github</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>Результаты не найдены</p>
}